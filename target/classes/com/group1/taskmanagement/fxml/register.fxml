<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group1.taskmanagement.controllers.RegisterController">
    <children>
        <!-- Title -->
        <Label layoutX="150.0" layoutY="30.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Create your account" />
        
        <!-- Full Name Label -->
        <Label layoutX="100.0" layoutY="80.0" text="Full Name" />
        <!-- Full Name Field -->
        <TextField fx:id="fullNameField" layoutX="100.0" layoutY="110.0" prefHeight="40.0" prefWidth="394.0" promptText="Full Name" style="-fx-background-radius: 10;" />
        
        <!-- Email Label -->
        <Label layoutX="100.0" layoutY="160.0" text="Email Address" />
        <!-- Email Address Field -->
        <TextField fx:id="emailField" layoutX="100.0" layoutY="190.0" prefHeight="40.0" prefWidth="394.0" promptText="Email Address" style="-fx-background-radius: 10;" />
        
        <!-- Password Label -->
        <Label layoutX="100.0" layoutY="240.0" text="Password" />
        <!-- Password Field -->
        <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="270.0" prefHeight="40.0" prefWidth="394.0" promptText="Password" style="-fx-background-radius: 10;" />
        
        <!-- Terms Agreement Checkbox -->
        <CheckBox fx:id="termsCheckBox" layoutX="100.0" layoutY="330.0" text="I agree to Terms and Privacy Policy" />
        
        <!-- Sign Up Button -->
        <Button fx:id="signUpButton" layoutX="102.0" layoutY="365.0" prefHeight="40.0" prefWidth="394.0" style="-fx-background-color: #ADD8E6; -fx-text-fill: black; -fx-background-radius: 20;" text="Sign Up" />
        
        <!-- Error Message -->
        <Label fx:id="errorMessage" layoutX="100.0" layoutY="430.0" text="" textFill="red" />
        
        <!-- Already Have an Account Label -->
        <Label layoutX="94.0" layoutY="422.0" text="Already have an account?" />
        <Button fx:id="loginButton" layoutX="271.0" layoutY="418.0" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#switchToLogin" style="-fx-background-radius: 20; -fx-background-color: #E6BBAD;" text="Log In" />

        
  
    </children>
</AnchorPane>
